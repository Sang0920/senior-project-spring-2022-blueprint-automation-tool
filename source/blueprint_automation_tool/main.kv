<Screen1>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Project B.A.T."
            left_action_items: [["cog", lambda c: app.change_screen("screen2")], ["information", lambda i: app.change_screen("screen3")]]

        MDLabel:
            text: "Screen1"
            halign: "center"

        MDBottomAppBar:
            MDToolbar:
                icon_color: app.theme_cls.accent_color
                icon: "hammer-wrench"
                type: "bottom"
                mode: "center"
                on_action_button: app.build_places()

<Screen2>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Configuration"
            left_action_items: [["home", lambda h: app.change_screen("screen1")], ["information", lambda i: app.change_screen("screen3")]]

        MDLabel:
            text: "Screen2"
            halign: "center"

<Screen3>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "About Project B.A.T."
            left_action_items: [["home", lambda h: app.change_screen("screen1")], ["cog", lambda c: app.change_screen("screen2")]]

        MDLabel:
            text: "Screen3"
            halign: "center"
